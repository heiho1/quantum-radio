{
  "name": "quantum-radio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "/usr/local/bin/node server.js",
    "dev": "nodemon --exec /usr/local/bin/node server.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest tests/backend",
    "test:frontend": "vitest run tests/frontend",
    "test:watch": "npm run test:backend -- --watch & npm run test:frontend -- --watch",
    "test:coverage": "jest --coverage && vitest run --coverage",
    "docker:build": "docker build -t quantum-radio:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t quantum-radio:dev .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/database.db:/app/database.db quantum-radio:latest",
    "docker:run:dev": "docker run -p 3001:3000 -v $(pwd):/app -v /app/node_modules -v $(pwd)/database.db:/app/database.db quantum-radio:dev",
    "docker:up": "docker compose up quantum-radio-prod",
    "docker:up:dev": "docker compose --profile dev up quantum-radio-dev",
    "docker:up:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose down",
    "docker:down:prod": "docker compose -f docker-compose.prod.yml down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:prod": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:clean": "docker system prune -f && docker image prune -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-fingerprint": "^1.2.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "pg": "^8.13.1",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "pg": "^8.13.1"
  }
}
